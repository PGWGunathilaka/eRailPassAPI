{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}